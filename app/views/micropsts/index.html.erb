<p id="notice"><%= notice %></p>

<h1>Micropsts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'New Micropst', new_micropst_path, class: 'btn waves-effect waves-light' %>

  <tbody>
    <% @micropsts.each do |micropst| %>
      <tr>
        <td><%= micropst.content %></td>
        <td><%= micropst.user_id %></td>
        <td><%= link_to 'Show', micropst %></td>
        <td><%= link_to 'Edit', edit_micropst_path(micropst) %></td>
        <td><%= link_to 'Destroy', micropst, class:'red-btn', method: :delete, data: { confirm: 'Are you sure?' }, style: "color: red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

